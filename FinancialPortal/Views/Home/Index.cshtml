@using Microsoft.AspNet.Identity;
@using FinancialPortal.Extensions
@using FinancialPortal.Helpers;

<!-- Content Header (Page header) -->
<style>
    body {
        background-color: #FFC9B9
    }

    .container-fluid {
        background-color: #FFC9B9
    }

    .small-box {
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: auto;
        background-color: #52796f;
        text-align: center;
        margin-bottom: 7.5px;
    }

    .small-box-footer {
        color: white;
    }

    #topbox {
        background-color: #84a98c;
        margin-top: 0px;
        margin-left: 0px !important;
        margin-right: 0px !important;
        border-bottom: 5px double white;
    }

</style>

<div class="container-fluid">
    <div class="row" >
        <div class="col" id="topbox">
            <div style="background-color: #84a98c">
                <h1 style="font-size: 400%; text-align: center; color: #2f3e46">
                    <b>User Options</b>
                </h1>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col">
            <div class="small-box">
                <div class="inner">
                    <h3>Join Households</h3>
                    <p style="color:#FFC9B9">Make a new Household for members to join. Once you have selected a Household name and greeting, you will be able to start adding new members and bank accounts.</p>

                </div>
                <div class="icon">
                    @*<i class="ion ion-stats-bars"></i>*@
                </div>
                <a href="#" data-toggle="modal" data-target="#joinHouseholdModal" class="small-box-footer"><i><b style="letter-spacing:2.5px">JOIN</b></i> <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col">
            <div class="small-box">
                <div class="inner">
                    <h3>Create Households</h3>
                    <p style="color:#FFC9B9">Make a new Household for members to join. Once you have selected a Household name and greeting, you will be able to start adding new members and bank accounts.</p>

                </div>
                <div class="icon">
                    @*<i class="ion ion-stats-bars"></i>*@
                </div>
                <a href="#" data-toggle="modal" data-target="#createHouseholdModal" class="small-box-footer"><i><b style="letter-spacing:2.5px">CREATE</b></i> <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col">
            <div class="small-box">
                <div class="inner">
                    <h3>Invite Members</h3>
                    <p style="color:#FFC9B9">Specify the amount of money that you would like to designate toward certain categories each month. For example, targets could be created for food, gas, utilities, etc.</p>
                </div>
                <div class="icon">
                    @*<i class="ion ion-person-add"></i>*@
                </div>
                <a href="#" data-toggle="modal" data-target="#" class="small-box-footer"><b><i style="letter-spacing:2.5px">INVITE</i></b> <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            <div class="small-box" style="background-color: #2f3e46">
                <div class="inner">
                    <h3>Add Bank Accounts</h3>
                    <p style="color:#FFC9B9">You can specify the details of a new Bank Account, including starting balance, warning balance, and type of account. Once added, bank accounts can be linked to budgets.</p>

                </div>
                <div class="icon">
                    @*<i class="ion ion-pie-graph"></i>*@
                </div>
                <a href="@Url.Action("Create", "BankAccounts")" class="small-box-footer"><b><i style="letter-spacing:2.5px">ADD</i></b> <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col">
            <div class="small-box" style="background-color: #2f3e46">
                <div class="inner">
                    <h3>Add Budgets</h3>
                    <p style="color:#FFC9B9">Specify the amount of money that you would like to designate toward certain categories each month. For example, targets could be created for food, gas, utilities, etc.</p>
                </div>
                <div class="icon">
                    @*<i class="ion ion-person-add"></i>*@
                </div>
                <a href="#" data-toggle="modal" data-target="#joinHouseholdModal" class="small-box-footer"><b><i style="letter-spacing:2.5px">ADD</i></b> <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col">
            <div class="small-box" style="background-color: #2f3e46">
                <div class="inner">
                    <h3>Add Categories</h3>
                    <p style="color:#FFC9B9">You can specify the details of a new Bank Account, including starting balance, warning balance, and type of account. Once added, bank accounts can be linked to budgets.</p>

                </div>
                <div class="icon">
                    @*<i class="ion ion-pie-graph"></i>*@
                </div>
                <a href="#" data-toggle="modal" data-target="#addBankAccountModal" class="small-box-footer"><b><i style="letter-spacing:2.5px">ADD</i></b><i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
