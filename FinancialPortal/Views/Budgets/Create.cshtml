@model FinancialPortal.Models.Budget

@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <div class="card card-custom">
        <div class="card-header" style="justify-content:center; display:flex; align-items:center; vertical-align:middle">
            <h3 class="card-title">
                Create New Budget
            </h3>
        </div>
        <!--begin::Form-->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <form class="form">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="card-body">
                    <div class="form-group form-group-last">
                        <div class="alert alert-custom alert-default" role="alert">
                            <span class="svg-icon svg-icon-success svg-icon-4x" style="padding-right:20px">
                                <!--begin::Svg Icon | path:C:\wamp64\www\keenthemes\themes\metronic\theme\html\demo1\dist/../src/media/svg/icons\Shopping\Wallet3.svg--><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                        <rect x="0" y="0" width="24" height="24" />
                                        <path d="M4,4 L20,4 C21.1045695,4 22,4.8954305 22,6 L22,18 C22,19.1045695 21.1045695,20 20,20 L4,20 C2.8954305,20 2,19.1045695 2,18 L2,6 C2,4.8954305 2.8954305,4 4,4 Z" fill="#000000" opacity="0.3" />
                                        <path d="M18.5,11 L5.5,11 C4.67157288,11 4,11.6715729 4,12.5 L4,13 L8.58578644,13 C8.85100293,13 9.10535684,13.1053568 9.29289322,13.2928932 L10.2928932,14.2928932 C10.7456461,14.7456461 11.3597108,15 12,15 C12.6402892,15 13.2543539,14.7456461 13.7071068,14.2928932 L14.7071068,13.2928932 C14.8946432,13.1053568 15.1489971,13 15.4142136,13 L20,13 L20,12.5 C20,11.6715729 19.3284271,11 18.5,11 Z" fill="#000000" />
                                        <path d="M5.5,6 C4.67157288,6 4,6.67157288 4,7.5 L4,8 L20,8 L20,7.5 C20,6.67157288 19.3284271,6 18.5,6 L5.5,6 Z" fill="#000000" />
                                    </g>
                                </svg><!--end::Svg Icon-->
                            </span>
                            <div class="alert-text">
                                Here you can careate a new monthly Budget for your Household. Please note that this Budget will take into consideration spending across all of your Bank Accounts, so you can keep an accurate account of how well you are sticking to your goals! For example, you might wish to create a Budget for "food" and you will be able to use Categories to keep track of all the different types of food spending within your Budget.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                @Html.LabelFor(model => model.BudgetName, "Name your Budget", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.BudgetName, new { htmlAttributes = new { @class = "form-control form-control-solid" } })
                                @Html.ValidationMessageFor(model => model.BudgetName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CurrentAmount, "Set the amount of your Budget", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.CurrentAmount, new { htmlAttributes = new { @class = "form-control form-control-solid" } })
                                @Html.ValidationMessageFor(model => model.CurrentAmount, "", new { @class = "text-danger" })
                            </div>

                            <input type="submit" class="btn btn-success mr-2 w-100" />
                        </div>
                        <div class="col">
                            <div class="d-flex flex-column flex-center">
                                <!--begin::Image-->
                                <div class="bgi-no-repeat bgi-size-cover rounded h-250px w-100" style="background-image: url('../../images/pexels-content-pixie-4103435.jpg'); min-height:100%; min-width:100%;"></div>
                                <!--end::Image-->
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
