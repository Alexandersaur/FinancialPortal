@using FinancialPortal.Models
@model BudgetItem

@using (Html.BeginForm("Create", "BudgetItems", FormMethod.Post, new { id = "modalBudgetItemForm" }))
{
@Html.AntiForgeryToken()
                @Html.Hidden("BudgetId", Model.BudgetId)

                                <div class="form-group">
                                    @Html.Label("Item Name")
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                                <div class="form-group">
                                                    @Html.Label("Target Amount")
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.TargetAmount, new { htmlAttributes = new { @class = "form-control" } })
                                                    </div>
                                                </div>}

