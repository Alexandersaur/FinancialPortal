@model IEnumerable<FinancialPortal.Models.BudgetItem>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col" id="topbox">
            <div>
                <h1 style="font-size: 400%; text-align: center;">
                    <b>All Categories</b>
                </h1>
            </div>
        </div>
    </div>

    <hr />

    @*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
    <table class="table">
        <thead>
            <tr>
                @*<th>
                @Html.DisplayNameFor(model => model.Budget.OwnerId)
            </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TargetAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentAmount)
                </th>
                @*<th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                    @Html.DisplayFor(modelItem => item.Budget.OwnerId)
                </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TargetAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentAmount)
                    </td>
                    @*<td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>*@
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>